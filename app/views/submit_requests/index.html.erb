<div class="container">
  <div class="wrapper col-md-10 col-md-offset-1 col-sm-10">
    <p id="notice"><%= notice %></p>

    <h1>Listing Submit Requests</h1>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>User</th>
          <th>Task</th>
          <th>Message</th>
          <th>Request user</th>
          <th>Status</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @submit_requests.each do |submit_request| %>
          <tr>
            <td><%= submit_request.user.name %></td>
            <td><%= submit_request.task.title %></td>
            <td><%= submit_request.message %></td>
            <td><%= submit_request.request_user.name %></td>
            <td><%= submit_request.status %></td>
            <td><%= link_to 'show', submit_request %></td>
            <td><%= link_to 'Edit', edit_submit_request_path(submit_request) %></td>
            <td><%= link_to 'Delete', submit_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Submit request', new_submit_request_path %>
  </div>
</div>