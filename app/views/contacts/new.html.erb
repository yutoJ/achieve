<div container>
    <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
        <p id="notice"><%= notice %></p>
        <%= form_for(@contact, url: confirm_contacts_path) do |f| %>
            <% if @contact.errors.any? %>
                <div id="error_explanation">
                    <h2><%= @contact.errors.count %>件エラーがあります。</h2>
                    
                    <ul>
                        <% @contact.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
            <br>
            <%= f.label :email %>
            <%= f.text_field :email, class: 'form-control' %>
            <br>
            <%= f.label :content %>
            <%= f.text_field :content, class: 'form-control' %>
            <br>
            <%= f.submit "確認", class: 'btn btn-primary btn-block' %>
        <% end %>
        <p><%= link_to "ブログ一覧画面に戻る", blogs_path %></p>
    </div>
</div>