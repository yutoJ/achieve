<p id="notice"><% notice %></p>

<%= form_for(@blog, url: choose_new_or_edit) do |f| %>
    <%= f.error_messages! %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
    <br>
    <%= f.label :content %>
    <%= f.text_field :content, class: 'form-control' %>
    <br>
    <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>
<%= render 'footer_link' %>
