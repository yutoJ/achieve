<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h3>以下の内容で、送信する。</h3>
    <p id="notice"><% notice %></p>
    
    <%= form_for(@blog) do |f| %>
        <%= f.hidden_field :title %>
        <%= f.hidden_field :content %>
        
        <p>タイトル:<%= @blog.title %></p>
        <p>本文:<%= @blog.content %></p>
        <%= f.submit "登録", class: 'btn btn-primary btn-block' %>
    <% end %>
    <%= form_for(@blog, url: new_blog_path, method: 'get') do |f| %>
        <%= f.hidden_field :title %>
        <%= f.hidden_field :content %>
        <%= f.submit '戻る', name: 'back', class: 'btn btn-primary btn-block' %>
    <% end %>
    <%= render 'footer_link' %>
  </div>
</div>