<h2>お知らせ</h2>
<hr>
<div class="container">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10">
    <% @notifications.each do |notification| %>
      <ol class="breadcrumb">
        <li><span class="label label-default"><%= read_or_unread(notification.read) %></span></li>
        <li><%= link_to notification.comment.user.try(:name), user_path(notification.comment.user_id) %>さんがあなたのブログ (<%= link_to "#{notification.comment.blog.title}", blog_path(notification.comment.blog, notification_id: notification.id) %>) にコメントしました。</li>
        <li><%= posted_time(notification.created_at) %></li>
      </ol>
    <% end %>
  </div>
</div>
