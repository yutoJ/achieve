
<div class="container">
  <div class="wrapper col-md-10 col-md-offset-1 col-sm-10">
    <p id="notice"><%= notice %></p>

    <h1>Listing Tasks</h1>

    <% if user_signed_in? %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>User</th>
            <th>Title</th>
            <th>Content</th>
            <th>Deadline</th>
            <th>Charge</th>
            <th>Status</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @tasks.each do |task| %>
            <tr>
              <td><%= task.user.name %></td>
              <td><%= task.title %></td>
              <td><%= task.content %></td>
              <td><%= date_japan(task.deadline) %></td>
              <td><%= task.charge.name %></td>
              <td><%= task.status %></td>
              <td><%= link_to 'Show', task %></td>
              <td><%= link_to 'Edit', edit_task_path(task) %></td>
              <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      No Tasks left.
    <% end %>
    <br>

    <%= link_to 'New Task', new_task_path %>
  </div>
</div>